---
interface Props {
    title?: string;
}
const { title } = Astro.props;
        
import '@styles/global.css';

import Meta from '@components/Meta.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <Meta title={title || "Nebula"} />
    </head>

    <body class="bg-gradient-to-b from-gray-100 to-[#ffacb4] dark:from-gray-900 dark:to-[#4e272b] animate-[gradient_3s_ease-in-out_infinite] text-black dark:text-white p-[50px]">
        <a rel="me" href="https://procursus.social/@nebula" style={{"display": "none"}}></a>
        
        <Header />
        
        <main>
            <slot />
        </main>

        <Footer />
    </body>
</html>
